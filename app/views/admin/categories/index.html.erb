<section class="admin-products-index">

  <header class="page-header">
    <h1>Category&raquo; All Categories</h1>
  </header>

  <div class="well mb-3">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>



<table class="table table-success text-center w-auto">

  <thead>
    <tr>
      <th scope="col">Available Categories</th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
  <tr>
  <td><%= category.name%></td>
  </tr>
  <%end%> 
  </tbody>

</table>



</section>